<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_signup_phone_title_text"
            android:fontFamily="@font/hanna_11"
            android:layout_marginEnd="125dp"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginRight="20dp"
            />

        <TextView android:layout_width="wrap_content"
            android:fontFamily="@font/hanna_11"
            android:layout_height="wrap_content"
            android:text="@string/activity_signup_phone_subtitle_text"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="98dp"
            android:gravity="center"
            android:textColor="#6c6b6b"
            android:textSize="15dp"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_text"
            android:layout_gravity="center"
            android:fontFamily="@font/hanna_11"
            android:gravity="center"
            android:layout_marginRight="155dp"
            android:textColor="#6c6b6b"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ph_tf"
            android:layout_width="360dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_height="50dp"
            android:background="@drawable/textinput_login"
            android:layout_marginTop="5dp">
            <EditText
                android:inputType="phone"
                android:id="@+id/ph_tv"
                android:textColor="#000"
                android:fontFamily="@font/hanna_11"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/access_number_text"
            android:id="@+id/access_show"
            android:layout_gravity="center"
            android:layout_marginRight="155dp"
            android:fontFamily="@font/hanna_11"
            android:gravity="center"
            android:textColor="#6c6b6b"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/visible_access"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            app:hintEnabled="true"
            android:layout_marginBottom="20dp"
            android:layout_height="50dp"
            android:background="@drawable/textinput_login">
            <EditText
                android:id="@+id/access_tv"
                android:fontFamily="@font/hanna_11"
                android:textColor="#000"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/send_btn"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/not_access_btn"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:text="@string/activity_signup_phone_send_number_text"
            android:gravity="center"
            android:fontFamily="@font/hanna_11"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/already_regi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_signup_phone_back_text"
            android:layout_gravity="center"
            android:fontFamily="@font/hanna_11"
            android:gravity="center"
            android:textColor="#A8A8A8"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</ScrollView>