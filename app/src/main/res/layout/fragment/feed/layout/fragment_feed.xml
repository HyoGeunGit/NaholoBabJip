<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="#FFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/text_story"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginLeft="10dp"
                                android:textSize="18sp"
                                android:textColor="#000"
                                android:fontFamily="@font/hanna_11"
                                android:text="스토리"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">

                                            <androidx.constraintlayout.widget.ConstraintLayout
                                                android:id="@+id/addStory"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="27dp"
                                                android:background="@drawable/story_box"
                                                android:layout_width="110dp"
                                                android:layout_height="200dp">

                                                    <androidx.cardview.widget.CardView
                                                        android:backgroundTint="#B5B3B3"
                                                        app:cardCornerRadius="37.5dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent">

                                                            <ImageView
                                                                android:backgroundTint="#8E8E8E"
                                                                android:id="@+id/image_story"
                                                                android:scaleX="0.8"
                                                                android:scaleY="0.8"
                                                                android:src="@drawable/ic_plus"
                                                                android:layout_gravity="center"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="match_parent"
                                                                android:scaleType="centerCrop"/>

                                                            <TextView
                                                                android:shadowColor="#FFFFFF"
                                                                android:shadowDx="1"
                                                                android:shadowDy="1"
                                                                android:shadowRadius="1"
                                                                android:id="@+id/name_tv"
                                                                android:layout_margin="20dp"
                                                                android:textColor="#FFFFFF"
                                                                android:textStyle="bold"
                                                                android:text=""
                                                                android:gravity="right|bottom"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="match_parent"/>
                                                    </androidx.cardview.widget.CardView>

                                            </androidx.constraintlayout.widget.ConstraintLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                    <androidx.recyclerview.widget.RecyclerView
                                                        android:layout_marginTop="12dp"
                                                        app:layout_constraintTop_toBottomOf="@id/text_story"
                                                        android:layout_gravity="center"
                                                        android:id="@+id/recycler_story"
                                                        android:orientation="horizontal"
                                                        tools:listitem="@layout/item_story"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="220dp"/>

                                            </LinearLayout>

                            </LinearLayout>

                            </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/hanna_11"
                        android:text="오늘 혼밥 여기 어때?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:shadowColor="#000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/hanna_11"
                        android:text="#기분이_저기압일땐_고기앞으로"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="270dp">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recommend_foodView"
                            android:orientation="horizontal"
                            tools:listitem="@layout/item_recomendfood"
                            android:layout_width="wrap_content"
                            android:layout_height="270dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recommend_foodView2"
                            android:orientation="horizontal"
                            tools:listitem="@layout/item_recomendfood"
                            android:layout_width="wrap_content"
                            android:layout_height="270dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:fontFamily="@font/hanna_11"
                        android:text="근처 맛집? 여기 참고해!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <GridLayout
                        android:layout_gravity="center"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:columnCount="4"
                        android:rowCount="4">

                            <Button
                                android:id="@+id/btn_test1"
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>


                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                            <Button
                                android:layout_margin="11dp"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:text=""/>

                    </GridLayout>
            </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.core.widget.NestedScrollView>