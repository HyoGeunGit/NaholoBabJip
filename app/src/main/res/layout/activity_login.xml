<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:fontFamily="@font/hanna_11"
                android:layout_marginEnd="135dp"
                android:layout_marginTop="110dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/hanna_11"
                android:layout_height="wrap_content"
                android:text="혼밥할 사람 찾아? 아님 혼밥맛집?"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="78dp"
                android:gravity="center"
                android:textColor="#6c6b6b"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:layout_gravity="center"
                android:fontFamily="@font/hanna_11"
                android:gravity="center"
                android:layout_marginRight="170dp"
                android:textColor="#6c6b6b"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="360dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:layout_height="50dp"
                android:background="@drawable/textinput_login"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/id_tv"
                    android:fontFamily="@font/hanna_11"
                    android:textColor="#000"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password"
                android:layout_gravity="center"
                android:layout_marginRight="145dp"
                android:fontFamily="@font/hanna_11"
                android:gravity="center"
                android:textColor="#6c6b6b"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="360dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                app:hintEnabled="true"
                android:layout_height="50dp"
                android:background="@drawable/textinput_login">
                <EditText
                    android:id="@+id/pw_tv"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/signup_btn"
                android:layout_width="360dp"
                android:layout_gravity="center"
                android:text="LOGIN"
                android:gravity="center"
                android:fontFamily="@font/hanna_11"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나홀로 집밥에 처음이신가요?"
                android:textColor="#c3c3c3"
                android:fontFamily="@font/hanna_11"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/signup_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/hanna_11"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="#c3c3c3"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="35dp"
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#c3c3c3"
                    android:fontFamily="@font/hanna_11"
                    android:text="SNS계정이 있으신가요?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/google_btn"
                        android:src="@drawable/ic_google" />

                    <ImageView
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/fb_btn"
                        android:src="@drawable/ic_fb" />

                    <ImageView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/kako_btn"
                        android:src="@drawable/ic_kakao"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>