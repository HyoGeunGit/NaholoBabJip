<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/molle_group_token"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/textinput_login"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/image_icon"
                            android:src="@drawable/ic_kakao"
                            android:layout_margin="20dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>

                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_marginLeft="70dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/image_icon"
                            android:layout_marginTop="10dp"
                            android:text="TEXT_TEST"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="@font/hanna_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView
                            android:id="@+id/ic_location"
                            android:src="@drawable/ic_kakao"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="38dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/image_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <ImageView
                            android:id="@+id/ic_time"
                            android:src="@drawable/ic_kakao"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="63dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/image_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/location_tv"
                            android:layout_marginLeft="30dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/ic_location"
                            android:layout_marginTop="40dp"
                            android:text="TEXT_TEST"
                            android:textColor="#000"
                            android:fontFamily="@font/hanna_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/time_tv"
                            android:layout_marginLeft="30dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="@id/ic_time"
                            android:layout_marginTop="65dp"
                            android:text="TEXT_TEST"
                            android:textColor="#000"
                            android:fontFamily="@font/hanna_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/ic_group"
                            android:src="@drawable/ic_kakao"
                            android:layout_marginRight="45dp"
                            android:layout_marginTop="63dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>


                        <TextView
                            android:id="@+id/people_tv"
                            android:layout_marginRight="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="68dp"
                            android:text="1/10"
                            android:textColor="#000"
                            android:fontFamily="@font/hanna_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:id="@+id/image_is19"
                            android:src="@drawable/ic_kakao"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="35dp"
                            android:layout_height="35dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>